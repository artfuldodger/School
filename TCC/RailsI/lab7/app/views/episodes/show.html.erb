<h1>Episode</h1>

<h3>Title</h3>
<%= @episode.title %>

<h3>Series</h3>
<%= link_to @series.title, series_episodes_path(@series) %>

<h3>Episode Number</h3>
<%= @episode.episode_number %>

<h3>Description</h3>
<p><%= @episode.description %></p>

<div id="navigation">
  <%= link_to 'Back to Episodes', series_episodes_path(@series) %> |
  <%= link_to 'Edit', edit_series_episode_path(@series,@episode) %> |
  <%= link_to 'Delete', series_episode_path(@series,@episode), :method => :delete, :confirm => 'Are you sure?' %>
</div>