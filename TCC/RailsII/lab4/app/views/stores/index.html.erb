<h1>Lists</h1>
<br />
<ul class="unstyled">
<% @stores.each do |store| %>
  <li style="padding-bottom: 15px">
    <span style="font-size: 1.4em; font-weight: bold"><%= link_to store.name, store %></span>
    <%= render store %>
  </li>
<% end %>
</ul>

<%= link_to 'Create a new list', new_store_path, class: 'btn', id: 'create_new', title: 'Keyboard shortcut: c' %>

<script type="text/javascript">
  key('c', function() { document.getElementById('create_new').click(); });
  <% @keyboard_shortcuts.each do |shortcut| %>
    key('<%= shortcut %>', function() { document.getElementById('add_item_<%= shortcut %>').click(); });
  <% end %>

  var cancelNewItem = function(event) {
    $("#new_item_li").remove();
  }
</script>