<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Role</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.role.name %></td>
    <td><%= link_to 'Show', user %></td>
    <td><% if current_user && current_user.is_admin? %><%= link_to 'Edit', edit_user_path(user) %><% end %></td>
    <td><% if current_user && current_user.is_admin? %><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %><% end %></td>
  </tr>
<% end %>
</table>

<br />

<% if current_user && current_user.is_admin? %>
  <%= link_to 'New User', new_user_path %>
<% end %>
