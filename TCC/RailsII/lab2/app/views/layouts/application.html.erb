<!DOCTYPE html>
<html>
<head>
  <title>Lab2</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <style>
    .navbar-fixed-top {
      color: white;
    }
    body {
      padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
    }
  </style>
</head>
<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="i-bar"></span>
        <span class="i-bar"></span>
        <span class="i-bar"></span>
      </a>
      <a class="brand" href="/" title="Yet Another Reddit Clone">YARC</a>
      <div class="nav-collapse">
        <ul class="nav">
          <li><a href="/users">Users</a></li>
        </ul>
      </div><!--/.nav-collapse -->

        <% if current_user %>
          <div class="pull-right">
          Signed in as <%= link_to current_user.name, current_user %> | <%= link_to 'Log out', logout_path %>
          </div>
        <% else %>
          <%= form_tag login_path, class: "form-search navbar-form pull-right" do %>
              <%= text_field_tag :email, params[:email], class: 'input-small', placeholder: 'Email' %>
              <%= password_field_tag :password, '', class: 'input-small', placeholder: 'Password' %>
              <%= submit_tag 'Log in', class: 'btn' %>
          <% end %>

        <% end %>

    </div>
  </div>
</div>

<div class="container">

  <% flash.each do |level, message| %>
    <div class="alert alert-<%= level %>"><%= message %></div>
  <% end %>

  <%= yield %>
</div>
</body>
</html>
