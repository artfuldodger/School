<h2>
  <%= @question.title %>
</h2>
<p>
  Asked by
  <%= link_to @question.user.name, @question.user %>
  in
  <%= link_to @question.category.name, @question.category %>
</p>

<% if @question.detail.present? %>
  <p>
    <b>More Details:</b><br />
    <%= @question.detail %>
  </p>
<% end %>

<h3>Answers</h3>
<%= link_to 'Add answer', new_category_question_answer_path(@category, @question) %><br /><br />
<% unless @answers.present? %>
  <p>No answers yet!</p>
<% end %>

<% @answers.each do |answer| %>
  <div class="answer">
    <p><%= answer.detail %></p>
    - <%= link_to answer.user.name, answer.user %>, <%= time_ago_in_words answer.created_at %>
  </div>
<% end %>

<% if current_user_is_admin? %>
  <%= link_to 'Edit', edit_category_question_path(@category, @question) %> |
<% end %>
<%= link_to 'Back', @category %>
