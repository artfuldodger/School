<h1>Categories</h1>
<br />
<ul>
<% @categories.each do |category| %>
  <li style="padding-bottom: 15px">
    <span style="font-size: 1.4em; font-weight: bold"><%= link_to category.name, category %></span> (<%= category.num_questions %> questions)
    <% if current_user_is_admin? %>
      <br />
      <%= link_to 'Edit', edit_category_path(category) %> |
      <%= link_to 'Destroy', category, confirm: 'Are you sure?', method: :delete %>
    <% end %>
  </li>
<% end %>
</ul>

<br />

<% if current_user_is_admin? %>
  <%= link_to 'Add a New Category', new_category_path %>
<% end %>
