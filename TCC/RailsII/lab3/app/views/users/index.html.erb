<h1>Users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Admin?</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user %></td>
    <td><%= user.is_admin? ? 'Yes' : 'No' %></td>
    <td><% if current_user_is_admin? %><%= link_to 'Edit', edit_user_path(user) %><% end %></td>
    <td><% if current_user_is_admin? %><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %><% end %></td>
  </tr>
<% end %>
</table>

<br />
<% if current_user_is_admin? %>
<%= link_to 'New User', new_user_path %>
<% end %>