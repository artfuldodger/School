<h1>Listing photos</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Album</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.title %></td>
    <td><%= photo.album %></td>
    <td><%= photo.image %></td>
    <td><%= link_to 'Show', [@album, photo] %></td>
    <td><%= link_to 'Edit', edit_album_photo_path(@album, photo) %></td>
    <td><%= link_to 'Destroy', [@album, photo], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Photo', new_album_photo_path(@album) %>
